@using DigiMedia_Template.ViewModels.CategoryViewModels
@model List<CategoryGetVM>
<div class="container">
    <div class="row">

        <div class="col-2">
            <a class="btn btn-success" asp-action="Create" asp-controller="Category">Create</a>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var category in Model)
                {
                    <tr>
                        <th scope="row">@category.Id</th>
                        <td>@category.Name</td>
                        <td>
                            <a class="btn btn-warning" asp-action="Update" asp-controller="Category" asp-route-id="@category.Id">Update</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-controller="Category" asp-route-id="@category.Id">Delete</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>

    </div>

</div>
