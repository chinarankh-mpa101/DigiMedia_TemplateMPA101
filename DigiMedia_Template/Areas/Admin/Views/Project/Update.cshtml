@using DigiMedia_Template.ViewModels.ProjectViewModels
@model ProjectUpdateVM
<div class="container">
    <div class="row">

        <form method="post" enctype="multipart/form-data">

            <div class="form-group">
                <label asp-for="Image">Name</label>
                <input asp-for="Image" class="form-control" placeholder="Enter image">
                <span asp-validation-for="Image"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" class="form-control" placeholder="Enter name">
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId">Category</label>
                <select asp-for="CategoryId" asp-items="@ViewBag.Categories">
                    <span asp-validation-for="CategoryId"></span>
                </select>
            </div>

            <button type="submit" class="btn btn-primary">Update</button>
        </form>

    </div>

</div>
