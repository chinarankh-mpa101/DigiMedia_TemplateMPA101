@using DigiMedia_Template.ViewModels.ProjectViewModels
@model List<ProjectGetVM>
<div class="container">
    <div class="row">

        <div class="col-2">
            <a class="btn btn-success" asp-action="Create" asp-controller="Project">Create</a>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">ImagePath</th>
                    <th scope="col">Name</th>
                    <th scope="col">Category Name</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var project in Model)
                {
                    <tr>
                        <th scope="row">@project.Id</th>
                        <td>
                            <img  src="~/assets/images/@project.ImagePath"/>
                        </td>
                        <td>@project.Name</td>
                        <td>@project.CategoryName</td>
                        <td>
                            <a class="btn btn-warning" asp-action="Update" asp-controller="Project" asp-route-id="@project.Id">Update</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-controller="Project" asp-route-id="@project.Id">Delete</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>

    </div>

</div>
